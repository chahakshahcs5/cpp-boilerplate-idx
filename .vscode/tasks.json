{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "sh build.sh Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "sh build.sh Release",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Run App",
      "type": "shell",
      "command": "./build/debug/MyCppApp",
      "dependsOn": "Build Debug",
      "group": "test"
    }
  ]
}